#!/bin/bash

qtask_state()
{
	local state taskid
	taskid=$1
	state=queued
	if [ -e "$queue_dir/$taskid.end" ]
	then
		state=ended
	else
		pidfile=$queue_dir/$taskid.pid
		if [ -e "$pidfile" ]
		then
			state=gone
			exec {task_lock_fd}>>"$pidfile"
			flock --shared --nonblock "$task_lock_fd"
			lock_err=$?
			if [ $lock_err != 0 ]
			then
				state=running
			fi
		fi
	fi
	echo "$state"
}

load_command_global()
{
	# load the NUL-delimited command and its arguments from the given file
	# and put in bash global $command[@] array.
	
	local command_file=$1
	local fd arg
	declare -g -a command=()
	exec {fd}<"$command_file"
	while read -r -d $'\0' -u $fd arg
	do
		command+=("$arg")
	done
	exec {fd}>&-
}


queue_dir=${DEFAULT_QUEUE_DIR:-}
quiet=''
very_quiet=''
dryrun=''
force=''

while [ $# != 0 ]
do
	case "$1" in
	--help)
		echo "Usage: $usage_help_text"
		exit;;
	-d|--queue-dir)
		shift
		queue_dir=$1
		;;
	-E|--no-task-exit-code)
		qrun_return_task_status=''
		;;
	-f|--force)
		force=yes
		;;
	-H|--no-header)
		qls_header=''
		;;
	--multiline)
		qls_multiline=yes
		;;
	-M|--no-multiline|--escape-command)
		qls_multiline=''
		;;
	-n|--dry-run)
		dryrun=yes
		;;
	-q|--quiet)
		quiet=yes
		;;
	-qq|--very-quiet)
		quiet=yes
		very_quiet=yes
		;;
	-s|--suppress-output)
		qrun_suppress_output=yes
		;;
	-x|--if-not-queued)
		qadd_no_dup=yes
		;;
	-X|--if-not-running)
		qadd_no_duprun=yes
		;;
	--)
		shift
		break;;
	-*)
		echo "$0: unknwon option: $1" >&2
		exit -1;;
	*)
		break;;
	esac
	shift
done

if [ -z "$queue_dir" ]
then
	# load default queue dir
	if [ -e ~/.config/qadd/default-queue-dir ]
	then
		queue_dir=`head -n 1 ~/.config/qadd/default-queue-dir`
		queue_dir=${queue_dir/#~\//$HOME/}
		mkdir -p "$queue_dir"
	fi
fi

if [ -z "$queue_dir" ]
then
	echo "$0: specify the queue control directory." >&2
	exit -2
fi


set -e
set -o pipefail
set -u

exec {lock_fd}>>"$queue_dir/.lock"
flock --exclusive $lock_fd
